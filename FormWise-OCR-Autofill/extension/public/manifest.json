{
  "manifest_version": 3,
  "name": "FormWise OCR Autofill",
  "version": "0.1.0",
  "description": "OCR documents and autofill forms with review & consent.",
  "action": {
    "default_title": "FormWise",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "permissions": ["storage", "scripting", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "src/sw/index.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/index.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["vendor/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
